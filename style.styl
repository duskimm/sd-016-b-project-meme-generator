container-generator()
  margin: auto
  width: calc(80% - 80px)

square-config(w)
  width: w
  height: @width

bg-image-config()
  background-position: center
  background-size: cover
  background-repeat: no-repeat

.border
  border: 1px solid black
  display: inline-block
  margin-top: 2rem
  square-config(50px)

.buttons-border-container 
  :nth-child(1)
    background-color: red
  :nth-child(2)
    background-color: blue
  :nth-child(3)
    background-color: green

.container
  container-generator()

#meme-image-container
  background-color #fff
  border: 1px solid black
  position: relative
  square-config(500px)

#meme-image
  background-position: center
  background-size: cover
  square-config(100%)

#meme-text
  bottom: 0
  color: white
  font-size: 30px
  position: absolute
  text-shadow: 5px 5px 5px black

.meme-template
  border: 1px solid black
  display: inline-block
  margin-top: 2rem
  square-config(80px)
